<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/blog/db" VERSION="20130407" COMMENT="XMLDB file for local news plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="local_blog" COMMENT="each record is a news">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="newstitle" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="newsdescription" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="created" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="newsenable" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
